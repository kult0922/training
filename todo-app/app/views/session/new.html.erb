<%= @title = "ログイン" %>

<h1><% @title %></h1>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <%= form_with url: session_path, model: @login_form, local: true, method: :post do |f| %>
        <%= f.label :name, "ユーザ名" %>
        <%= f.text_field :name, class: 'form-control', required: true %>

        <%= f.label :pass, "パスワード" %>
        <%= f.password_field :pass, class: 'form-control' , required: true %>

        <div class="btn-area mt-5">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

</div>

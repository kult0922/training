<div class="container">
  <div class="mt-3">
    <h1 class="text-center"><%= I18n.t('tasks.taskdetail.page_title') %></h1>
  </div>
  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="col" class="bg-secondary text-light"><%= I18n.t('tasks.taskdetail.status') %></th>
            <td><%= I18n.t("enums.task.status.#{@task_infos.status}") %></td>
          </tr>
          <tr>
            <th scope="col" class="bg-secondary text-light"><%= I18n.t('tasks.taskdetail.title') %></th>
            <td><%= @task_infos.title %></td>
          </tr>
          <tr>
            <th scope="col" class="bg-secondary text-light"><%= I18n.t('tasks.taskdetail.detail') %></th>
            <td><%= @task_infos.detail %></td>
          </tr>
          <tr>
            <th scope="col" class="bg-secondary text-light"><%= I18n.t('tasks.taskdetail.end_date') %></th>
            <td><%= @task_infos.end_date == nil ? "-" : @task_infos.end_date.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th scope="col" class="bg-secondary text-light"><%= I18n.t('tasks.taskdetail.tags_name') %></th>
            <td>
              <% @task_infos.tag_list.each do |tag| %>
              <span class="badge badge-info p-2"><%= tag %></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row mt-5">
        <div class="col-sm text-center">
          <%= link_to("#{I18n.t('tasks.taskdetail.back_button')}", "/", class: "btn btn-outline-secondary") %>
        </div>
        <div class="col-sm text-center">
          <%= link_to("#{I18n.t('tasks.taskdetail.edit_button')}", tasks_taskupdate_path(@task_infos.id), class: "btn btn-primary") %>
        </div>
        <div class="col-sm text-center">
          <%= link_to("#{I18n.t('tasks.taskdetail.delete_button')}", tasks_taskdelete_path(@task_infos.id), class: "btn btn-danger", method: :delete) %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= stylesheet_pack_tag 'task/tagsinput' %>
<div class="container">
  <div class="mt-3">
    <h1 class="text-center"><%= I18n.t('tasks.newtask.page_title') %></h1>
  </div>
  <div class="col-sm-5 mx-auto">
    <%# ここからエラーメッセージ %>
    <% if @task.errors.any? %>
    <div class="mt-5">
      <h4><%= I18n.t('tasks.newtask.error_title') %></h4>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%# ここまでエラーメッセージ %>
  </div>
  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <%= form_for(@task, url: {controller: 'tasks', action: 'createtask'}) do |f| %>
      <div class="form-group row">
        <%= f.label :status, class: "col-sm-4 d-flex align-items-center" %>
        <%= f.select :status, Task.statuses.map {|k, v| [I18n.t("enums.task.status.#{k}"), v]}, {}, class: "col-sm-7 custom-select" %>
      </div>
      <div class="form-group row">
        <%= f.label :title, class: "col-sm-4 col-form-label d-flex align-items-center" %>
        <%= f.text_field :title, class: "col-sm-7 form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :detail, class: "col-sm-4 col-form-label d-flex align-items-center" %>
        <%= f.text_area :detail, rows: "10", class: "col-sm-7 form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :end_date, class: "col-sm-4 col-form-label d-flex align-items-center" %>
        <%= f.date_field :end_date, class: "col-sm-7 form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :tag_list, class: "col-sm-4 col-form-label d-flex align-items-center" %>
        <div class="col-sm-7 text-left pr-0 pl-0">
          <%= f.text_field :tag_list, data: {:role => "tagsinput"}, class: "col-sm form-control" %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-sm-6 text-left">
          <%= link_to("#{I18n.t('tasks.newtask.back_button')}" , "/", class: "btn btn-outline-secondary") %>
        </div>
        <div class="col-sm-6 text-right">
          <%= f.submit class: "btn btn-secondary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'task/tagsinput' %>
